{
	"name": "@stimulcross/configs",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"version": "1.0.0",
	"description": "Set of various configs.",
	"main": "index.js",
	"repository": "git@github.com:StimulCross/configs.git",
	"author": "Stimul Cross <stimulcross@gmail.com>",
	"license": "See LICENSE file in each package",
	"devDependencies": {
		"eslint": "^8.21.0",
		"husky": "^8.0.1",
		"lerna": "^5.4.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1"
	},
	"scripts": {
		"lint": "eslint --ext js,ts packages",
		"prettier:check": "prettier --check \"packages/**\"",
		"prettier:fix": "prettier --write \"packages/**\"",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,css,json,md}": "prettier --write",
		"*.{js,ts}": "eslint"
	}
}
